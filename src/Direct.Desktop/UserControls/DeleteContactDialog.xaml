<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Direct.Desktop.UserControls.DeleteContactDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Padding="0 15 0 5">
        <TextBlock Text="{x:Bind Text}"
                   FontFamily="{StaticResource DefaultFontFamily}"
                   Margin="0 0 0 20" />

        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
            <FontIcon
                Foreground="{StaticResource OrangeBrush}"
                Glyph="&#xE946;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="0 0 5 0" />

            <TextBlock FontFamily="{StaticResource DefaultFontFamily}">Deleting a contact will not delete the messages you have with them.</TextBlock>
        </StackPanel>

        <TextBlock FontFamily="{StaticResource DefaultFontFamily}"
                   Margin="0 0 0 20">If you add the same contact again you will still have your message history.</TextBlock>

        <CheckBox IsChecked="{x:Bind DeleteMessages, Mode=TwoWay}"
                  FontFamily="{StaticResource DefaultFontFamily}">Delete my messages with this contact</CheckBox>
    </StackPanel>

</Page>
